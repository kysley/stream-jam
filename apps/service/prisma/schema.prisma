// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                 String              @id @default(uuid())
  twRefreshToken     String
  twDisplayName      String              @unique
  twId               String              @unique
  magnets            Magnet[]
  streams            OverlayEditor[]
  overlay            Overlay?
  subscriptionEvents SubscriptionEvent[]

  @@unique([id, twId, twDisplayName])
}

model Magnet {
  id      String  @id @default(cuid())
  props   String? // stringified json for now
  name    String
  version Int     @default(1)
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
}

model OverlayEditor {
  id        String  @id @default(uuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  overlay   Overlay @relation(fields: [overlayId], references: [id])
  overlayId String

  @@unique([userId, overlayId])
}

model Overlay {
  id      String          @id @default(uuid())
  editors OverlayEditor[]
  user    User            @relation(fields: [userId], references: [id])
  userId  String          @unique

  @@unique([id, userId])
}

model SubscriptionEvent {
  id            String @id @default(uuid())
  name          String
  twDisplayName String
  twId          String
  duration      Int

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
